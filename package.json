{
  "name": "cra-boilerplate",
  "version": "0.0.1",
  "description": "create-react-app with extended configuration",
  "private": true,
  "author": "John Darryl Pelingo <johndarrylpelingo@gmail.com> (https://github.com/john-d-pelingo)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/john-d-pelingo/cra-boilerplate.git"
  },
  "bugs": {
    "url": "https://github.com/john-d-pelingo/cra-boilerplate/issues"
  },
  "engines": {
    "node": ">=12"
  },
  "scripts": {
    "--DEVELOPMENT--": "echo \"--DEVELOPMENT--\" && exit 1",
    "eject": "react-scripts eject",
    "format": "yarn pretty --write",
    "format:d": "yarn pretty --list-different",
    "lint": "tslint --config tslint.json --project tsconfig.json --force *.{ts,tsx}",
    "lint:staged": "lint-staged",
    "posttest": "yarn test:t",
    "pretty": "prettier --config .prettierrc 'src/**/*.{css,js,ts,tsx}'",
    "nuke": "rimraf node_modules && yarn install",
    "start": "react-scripts start",
    "sweep": "rimraf build coverage",
    "test": "CI=true react-scripts test --env=jsdom --no-cache",
    "test:t": "tsc -p ./tsconfig.json --noEmit",
    "test:w": "react-scripts test --env=jsdom --no-cache --verbose=false",
    "validate": "yarn lint && yarn format:d",
    "--BUILD--": "echo \"--BUILD--\" && exit 1",
    "build": "react-scripts build",
    "build:ci": "yarn build",
    "prebuild": "run-s validate test sweep",
    "--PRODUCTION--": "echo \"--PRODUCTION--\" && exit 1",
    "start:prod": "serve -l 8080"
  },
  "dependencies": {
    "history": "^4.7.2",
    "react": "^16.7.0",
    "react-cache": "^2.0.0-alpha.1",
    "react-dom": "^16.7.0",
    "react-router-dom": "^5.0.0",
    "react-transition-group": "^4.0.1",
    "vanilla-tilt": "^1.6.1"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^4.0.0",
    "@testing-library/react": "^9.1.0",
    "@types/history": "^4.7.2",
    "@types/jest": "^24.0.13",
    "@types/node": "^12.0.2",
    "@types/react": "^16.7.18",
    "@types/react-cache": "^2.0.0",
    "@types/react-dom": "^16.0.11",
    "@types/react-router-dom": "^5.1.0",
    "@types/react-transition-group": "^4.2.2",
    "@types/vanilla-tilt": "^1.4.1",
    "@types/webpack-env": "^1.13.6",
    "husky": "^3.0.1",
    "lint-staged": "^9.0.0",
    "node-sass": "^4.11.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.15.3",
    "react-scripts": "^3.3.0",
    "react-test-renderer": "^16.7.0",
    "rimraf": "^3.0.0",
    "serve": "^11.0.0",
    "test-data-bot": "^0.8.0",
    "tslint": "^5.12.0",
    "tslint-config-prettier": "^1.17.0",
    "tslint-plugin-prettier": "^2.0.1",
    "typescript": "^3.2.2"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/*.js",
      "!src/features/*.js",
      "!src/utilities/test-utils.js",
      "!<rootDir>/node_modules/"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
