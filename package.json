{
  "name": "cra-boilerplate",
  "version": "0.0.1",
  "description": "create-react-app with extended configuration",
  "private": true,
  "author": "John Darryl Pelingo <johndarrylpelingo@gmail.com> (https://github.com/john-d-pelingo)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/john-d-pelingo/cra-boilerplate.git"
  },
  "bugs": {
    "url": "https://github.com/john-d-pelingo/cra-boilerplate/issues"
  },
  "scripts": {
    "build": "cross-env react-scripts build",
    "build:ci": "cross-env react-scripts build",
    "format": "prettier --write --config .prettierrc 'src/**/*.{css,js,jsx}'",
    "eject": "cross-env react-scripts eject",
    "lint": "eslint .",
    "lint:staged": "lint-staged",
    "nuke": "rimraf node_modules yarn.lock && yarn install",
    "prebuild": "run-s test sweep",
    "prebuild:ci": "run-s test:c sweep",
    "prep": "run-s format lint test",
    "serve:b": "serve -l 8080",
    "start": "cross-env react-scripts start",
    "sweep": "rimraf build coverage",
    "test": "cross-env CI=true react-scripts test --env=jsdom",
    "test:c": "cross-env CI=true react-scripts test --env=jsdom --coverage",
    "w:test": "cross-env react-scripts test --env=jsdom --no-cache --verbose"
  },
  "dependencies": {
    "react": "^16.6.1",
    "react-dom": "^16.6.1"
  },
  "devDependencies": {
    "cross-env": "^5.2.0",
    "enzyme": "^3.7.0",
    "enzyme-adapter-react-16": "^1.7.0",
    "enzyme-to-json": "^3.3.1",
    "eslint-config-prettier": "^3.1.0",
    "husky": "^1.1.3",
    "lint-staged": "^8.0.4",
    "npm-run-all": "^4.1.2",
    "prettier": "1.15.1",
    "react-scripts": "2.1.1",
    "react-test-renderer": "^16.6.1",
    "rimraf": "^2.6.2",
    "serve": "^10.0.2"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/*.js",
      "!src/features/*.js",
      "!src/utilities/test-utils.js",
      "!<rootDir>/node_modules/"
    ]
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ]
}
